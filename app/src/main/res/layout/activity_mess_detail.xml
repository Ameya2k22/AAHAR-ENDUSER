                android:layout_marginStart="20dp"
                android:fontFamily="@font/oswald"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:minHeight="48dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="20sp" />


